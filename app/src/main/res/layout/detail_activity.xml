<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/detail_laout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="191dp"
            android:id="@+id/image_fotoDetail_laout" android:layout_alignParentStart="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="110dp"/>
    <TextView
            android:layout_width="303dp"
            android:layout_height="52dp"
            android:id="@+id/lbl_name"
            android:gravity="center"
            android:textSize="25sp" android:layout_marginTop="25dp" android:layout_below="@+id/image_fotoDetail_laout"
            android:layout_alignParentEnd="true" android:layout_marginEnd="53dp" android:layout_alignParentStart="true"
            android:layout_marginStart="55dp" android:textAlignment="center"/>

    <TextView
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_designation"
            android:layout_marginTop="31dp" android:layout_below="@+id/lbl_name" android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp" android:layout_alignParentStart="true" android:layout_marginStart="64dp"
            android:textSize="35sp" android:textAlignment="center"/>

    <TextView
            android:layout_width="284dp"
            android:layout_height="73dp"
            android:id="@+id/lbl_salary"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp" android:layout_below="@+id/lbl_designation"
            android:layout_alignParentEnd="true" android:layout_marginEnd="60dp" android:layout_alignParentStart="true"
            android:layout_marginStart="67dp" android:textSize="35sp" android:textAlignment="center"/>

</RelativeLayout>


